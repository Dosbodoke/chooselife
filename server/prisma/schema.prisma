// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coordinates {
  uuid           String           @id @default(uuid())
  latitude       Float
  longitude      Float
  HighlineAnchor HighlineAnchor[]
}

model HighlineAnchor {
  uuid          String      @id @default(uuid())
  description   String
  coordinates   Coordinates @relation(fields: [coordinatesId], references: [uuid])
  coordinatesId String
  anchorSide    AnchorSide  @default(A)
  highline      Highline    @relation(fields: [highlineId], references: [uuid])
  highlineId    String      @unique
}

model Highline {
  uuid     String           @id @default(uuid())
  name     String
  height   Int
  length   Int
  isRigged Boolean
  anchors  HighlineAnchor[]
}

enum AnchorSide {
  A
  B
}
